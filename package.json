{
  "name": "current-device",
  "version": "0.10.2",
  "description": "The easiest way to write conditional CSS and/or JavaScript based on device operating system (iOS, Android, Blackberry, Windows, Firefox OS, MeeGo, AppleTV, etc), orientation (Portrait vs. Landscape), and type (Tablet vs. Mobile).",
  "homepage": "https://github.com/matthewhudson/current-device",
  "bugs": {
    "url": "https://github.com/matthewhudson/current-device/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/matthewhudson/current-device.git"
  },
  "license": "MIT",
  "author": {
    "name": "Matthew Hudson",
    "email": "matthud@gmail.com",
    "url": "https://hudson.dev"
  },
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "lib/types/index.d.ts",
  "files": [
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
    "build": "nwb build-web-module && cp -R src/types ./lib",
    "lint": "yarn lint:js && yarn lint:package",
    "lint:js": "cross-env NODE_ENV=production eslint --cache --cache-location=.cache/eslint --ext .js,.jsx,.html,.ts,.tsx,.mjs --report-unused-disable-directives",
    "lint:package": "sort-package-json",
    "prerelease": "npm run build",
    "release": "auto shipit",
    "test": "nwb test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "pull-lock"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint:js"
    ],
    "package.json": [
      "yarn lint:package"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "none"
  },
  "devDependencies": {
    "@auto-it/all-contributors": "^10.2.3",
    "@auto-it/conventional-commits": "10.9.1",
    "@auto-it/first-time-contributor": "^10.2.3",
    "@auto-it/npm": "^10.2.3",
    "@auto-it/pr-body-labels": "^10.2.3",
    "@auto-it/released": "^10.2.3",
    "auto": "10.9.1",
    "cross-env": "7.0.3",
    "eslint": "7.12.1",
    "eslint-plugin-import": "2.22.1",
    "husky": "4.3.7",
    "lint-staged": "10.5.3",
    "nwb": "0.23.0",
    "prettier": "2.2.1",
    "sort-package-json": "1.48.1"
  },
  "peerDependencies": {
    "auto": ">= 10.x"
  },
  "engines": {
    "node": "12.x",
    "npm": "6.1.x",
    "yarn": "1.x"
  },
  "auto": {
    "plugins": [
      "npm",
      "conventional-commits",
      "pr-body-labels",
      "released",
      "first-time-contributor",
      "all-contributors"
    ],
    "labels": [
      {
        "name": "breaking-minor",
        "description": "Major version zero (0.y.z) is for initial development. Anything MAY change at any time.",
        "changelogTitle": "ðŸ”¨ Breaking Minor Change",
        "releaseType": "minor"
      },
      {
        "name": "dependency-update",
        "changelogTitle": "ðŸ”© Dependency Updates",
        "releaseType": "none"
      }
    ]
  },
  "pull-lock": {
    "yarn.lock": "yarn install"
  }
}
